<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Alasa.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Alasa.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Closing="Window_OnClosing"
        Opened="TopLevel_OnOpened"
        Title="Alasa">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <Menu IsVisible="False">
            <MenuItem Header="_File">
                <MenuItem x:Name="SaveMenuItem" Header="_Save" 
                          Command="{Binding ShowCapture}" 
                          HotKey="Shift+X"/>
            </MenuItem>
        </Menu>
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Items="{Binding SongList}" 
                 DoubleTapped="InputElement_OnDoubleTapped"
                 SelectionChanged="SelectingItemsControl_OnSelectionChanged" >
            
        </ListBox>
    </StackPanel>
    

</Window>
